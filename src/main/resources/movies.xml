<?xml version="1.0" encoding="UTF-8" ?>
<Resource version="1.1">
    <Desc>Contains information about movies.</Desc>
    <Request method="GET">
        <Param name="q" pattern="\d" num="true" min="3" max="5"/>
        <Sql when="@q eq 1" type="query">
            SELECT * FROM movie
        </Sql>
        <Desc>Get all the tasks entered today.</Desc>
        <Sql when="@q eq 2" type="query">
            SELECT * FROM movie where id=@movieId
        </Sql>
        <Sql when="@q eq 3" type="query">
            SELECT `name`,`rating` from movie where `release` ge @fromDate and `release` le @toDate
        </Sql>
    </Request>
    <Request method="GET">
        <Sql when ="@id eq null" type="query" className="com.mtg.Urls">
            select * from employee
            where employee_name = @param1
            and employee_id = @id
        </Sql>
        <Sql when="@id ne null" type="update">
            update employee set employee_name = @param1 where employee_id=@id
        </Sql>
    </Request>
    <Request method="POST" status="201">
        <Param name="q" max="5" />
        <Sql type="update">
            INSERT INTO movie (`name`, `rating`,`release`) VALUES (@p, @q,@rDate)
        </Sql>
    </Request>
    <Request method="PUT" item="true" status="202">
        <Sql type="update">
            UPDATE movie SET rating=@rating WHERE id=@id
        </Sql>
    </Request>
    <Request method="DELETE" item="true" status="410">
        <Sql type="update">
            DELETE FROM movie WHERE id=@id
        </Sql>
    </Request>
</Resource>
