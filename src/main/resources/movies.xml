<?xml version="1.0" encoding="UTF-8" ?>
<Resource version="1.1">
    <Desc>Contains information about movies.</Desc>
    <Request method="GET">
        <Sql type="query" when="@movieId eq null">
            SELECT * FROM movie
        </Sql>
        <Sql type="query" when="@movieId gt 0">
            SELECT * FROM movie where id=@movieId
        </Sql>
    </Request>
    <Request method="POST">
        <Sql type="update">
            INSERT INTO movie (name, rating) VALUES (@p, @q)
        </Sql>
        <Status>201</Status>
    </Request>
    <Request method="PUT" item="true">
        <Sql type="update">
            UPDATE movie SET rating=@rating WHERE id=@id
        </Sql>
        <Status>202</Status>
    </Request>
    <Request method="DELETE" item="true">
        <Sql type="update">
            DELETE FROM movie WHERE id=@id
        </Sql>
        <Status>410</Status>
    </Request>
</Resource>
