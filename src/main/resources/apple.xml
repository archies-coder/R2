<Resource version="1.0">

    <Desc>Contains records for data type apple</Desc>

    <Request method="GET" item="true" >
        <Param name="t" blank="true" min="1" exists="table.column" />
        <Param name="u" min="1" max="100" pattern="[a-z]+" />
        <Param name="v" minLen="2" maxLen="50" />

        <Sql type="query" className="com.mtg.Urls">
            select * from employee
            where employee_name = @param1
            and employee_id = @id
        </Sql>

        <Sql type="update">
            update employee set employee_name = @param1 where employee_id=@id
        </Sql>
    </Request>

    <Request method="POST">
        <Desc>Request for creating an employee record.</Desc>
        <Sql type="update">
            insert into employee
            (employee_name, employee_id)
            values(@name, @id)
        </Sql>
        <Execute className="com.mtg.Apple" />
    </Request>

