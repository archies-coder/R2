<?xml version="1.0" encoding="UTF-8" ?>
<Resource version="1.0">

    <desc>Contains records for data type apple</desc>

    <Request method="GET" item="true" >
        <param paramName="t" blank="true" min="1" exists="table.column" />
        <param paramName="t" min="1" max="100" />

        <Sql className="com.mtg.Urls">
            select * from employee
            where employee_name = @param1
            and employee_id = @id
        </Sql>
        <Sql type="update" when="@abc lt 3 and @def not empty">
            update employee set employee_name = @param1 where employee_id lt 3
        </Sql>
    </Request>

    <Create>
        <desc>Request for creating an employee record.</desc>
        <execute className="com.mtg.Apple" />

        <Sql>
            insert into employee
            (employee_name, employee_id)
            values(@name, @id)
        </Sql>
    </Create>

    <Create>
        <desc>Request for creating an employee record.</desc>
        <execute className="com.mtg.Apple" />
        <Sql>
            insert into employee
            (employee_name, employee_id)
            values(@name, @id)
        </Sql>
    </Create>

    <!--derived from request -->
    <Read>
        <execute className="com.mtg.Apple" />
    </Read>

    <Read item="true">
        <Sql when="@item gt 1">
            select * from employee where employee_id=12
        </Sql>
    </Read>
</Resource>
